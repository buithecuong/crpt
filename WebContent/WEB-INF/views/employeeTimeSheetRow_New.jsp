    <div class="content">
             <p> Employee Name : ${employee.getName()}</p>

                <form:form name="regForm"  method="post"
                    action="addEmployeeTimesheetRow" modelAttribute="employeetimesheet">

                    
                    <table id="TimeSheet" width="350px" border="1">
                        <tr>
                            <th>Job_Title</th>
                            <th>Hours</th>
                            <th>Status</th>
                            <th>Date</th>

                        </tr>
                        <tr>
                            <td><input type="text" name="jobTitle" id="jobTitle" /></td>
                            <td><input type="number" name="hours" id="hours" /></td>
                            <td><input type="text" name="status" id="status" /></td>
                            <td><input type="date" name="date" id="datepicker"/></td>
                                
                        </tr>

                    </table>
                    <br />
                    <input type="submit" value="Save" />
                </form:form>
        
 
    <!-- /.content -->
